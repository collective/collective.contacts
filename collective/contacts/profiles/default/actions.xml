<?xml version="1.0" encoding="UTF-8"?>
<object name="portal_actions" meta_type="Plone Actions Tool" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="contacts_actions" meta_type="CMF Action Category">
  <property name="title"/>
  <object name="organizations" meta_type="CMF Action" i18n:domain="collective.contacts">
   <property name="title" i18n:translate="">Organizations</property>
   <property name="description" i18n:translate=""/>
   <property name="url_expr">string:${folder_url}/list_organizations</property>
   <property name="icon_expr"/>
   <property name="available_expr">python:object.meta_type == 'AddressBook'</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
  <object name="persons" meta_type="CMF Action" i18n:domain="collective.contacts"
        insert-after="organizations">
   <property name="title" i18n:translate="">Persons</property>
   <property name="description" i18n:translate=""/>
   <property name="url_expr">string:${folder_url}/list_persons</property>
   <property name="icon_expr"/>
   <property name="available_expr">python:object.meta_type in ('AddressBook', 'Organization', 'Group')</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
  <object name="groups" meta_type="CMF Action" i18n:domain="collective.contacts"
        insert-after="persons">
   <property name="title" i18n:translate="">Groups</property>
   <property name="description" i18n:translate=""/>
   <property name="url_expr">string:${folder_url}/list_groups</property>
   <property name="icon_expr"/>
   <property name="available_expr">python:object.meta_type in ('AddressBook', 'Organization', 'Group')</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
 <object name="document_actions" meta_type="CMF Action Category">
  <object name="vcf" meta_type="CMF Action" i18n:domain="collective.contacts">
   <property name="title" i18n:translate="">Business Card (vCard)</property>
   <property name="description" i18n:translate=""/>
   <property name="url_expr">string:${object_url}/export.vcf</property>
   <property name="icon_expr"/>
   <property name="available_expr">python:object.meta_type in ('Person', 'Organization')</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
  <object name="ics" meta_type="CMF Action" i18n:domain="collective.contacts">
   <property name="title" i18n:translate="">Birthday (vCal)</property>
   <property name="description" i18n:translate=""/>
   <property name="url_expr">string:${object_url}/export.ics</property>
   <property name="icon_expr"/>
   <property name="available_expr">python:object.meta_type == 'Person' and object.birthdate</property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
</object>